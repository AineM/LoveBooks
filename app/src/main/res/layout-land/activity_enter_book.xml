<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffd6ffdb"
    android:orientation="vertical"
    tools:context="com.example.ainemawe.bookapp.EnterBook">

    <TextView
        android:id="@+id/textAppView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="68dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_books"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:contentDescription="logo" />


    <EditText
        android:id="@+id/editISBN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/edit_ISBNMessage"
        android:textSize="24sp"
        android:inputType="number"
        android:layout_below="@+id/textAppView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_marginTop="62dp" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="53dp"
        android:clickable="true"
        android:text="@string/button_Search"
        android:textSize="24sp"
        android:layout_below="@+id/editISBN"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView"
        android:layout_marginRight="65dp"
        android:layout_marginEnd="65dp" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:text="Cancel"
        android:textSize="24sp"
        android:layout_alignTop="@+id/buttonSearch"
        android:layout_toRightOf="@+id/textAppView"
        android:layout_toEndOf="@+id/textAppView"
        android:layout_marginLeft="58dp"
        android:layout_marginStart="58dp" />


</RelativeLayout>
