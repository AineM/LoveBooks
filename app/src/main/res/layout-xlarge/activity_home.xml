<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffd6ffdb"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Home">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_books"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/black"
        android:textSize="@android:dimen/notification_large_icon_width" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_info"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/abc_text_size_display_3_material"
        android:textStyle="bold"
        android:padding="5sp"
        android:gravity="center"
        android:paddingTop="12sp"
        android:id="@+id/app_info"
        android:layout_below="@+id/imageView2"
        android:textColor="#ff000000"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/buttonScanISBN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="scanISBN"
        android:text="Scan ISBN"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:layout_below="@+id/app_info"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <Button
        android:id="@+id/enter_detailsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:onClick="enterDetails"
        android:text="Enter ISBN"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:layout_below="@+id/buttonScanISBN"
        android:layout_alignLeft="@+id/buttonScanISBN"
        android:layout_alignStart="@+id/buttonScanISBN"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <Button
        android:id="@+id/buttonSaved"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="viewGallery"
        android:text="View Saved Books"
        android:textSize="@dimen/abc_text_size_display_1_material"
        android:layout_below="@+id/enter_detailsBtn"
        android:layout_alignLeft="@+id/enter_detailsBtn"
        android:layout_alignStart="@+id/enter_detailsBtn"
        android:layout_alignRight="@+id/enter_detailsBtn"
        android:layout_alignEnd="@+id/enter_detailsBtn" />


</RelativeLayout>
